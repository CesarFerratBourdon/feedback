<div class="page-header">
  <h1><%=t ".title", default: "Login" %></h1>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}) do |f| %>


  <div class="form-group">
    <%= f.label :email, class: "control-label col-md-4 sr-only" %>
    <div class="col-xs-12">
      <%= f.email_field :email, class: "text-field form-control", placeholder: "Email address"%>
    </div>
  </div>


  <div class="form-group">
    <%= f.label :password, class: "control-label col-md-4 sr-only" %>
    <div class="col-xs-12">
      <%= f.password_field :password, class: "text-field form-control", placeholder: "Password" %>
    </div>
  </div>


  <div>
    <a href="<%=new_user_password_path%>">Forgot your password?</a>
  </div>
  <br/>
  <div class="form-group">
    <div class="col-xs-12">
      <%= f.submit "SUBMIT", class: "btn btn-primary col-xs-12" %>
    </div>
  </div>

<% end %>


